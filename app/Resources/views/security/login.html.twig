{% extends 'base.html.twig' %}
{% block title %}Home{% endblock %}
{% block img_une %}{{ asset('bundles/clean-blog/img/home-bg.jpg') }}{% endblock %}
{% block body %}
<article>

<div class="container">
  <div class="row">
    {% if auth_error %}
        <div class="alert alert-danger" role="alert">{{ auth_error.message }}</div>
    {% endif %}
    <h1>Identify yourself</h1>
    <form class="" action="{{ path('authentication_check') }}" method="post">
      <div>
        <label for="username">Username</label>
      </div>
      <div>
        <input type="text" name="username"></input>
      </div>
      <div>
        <label for="password">Password</label>
      </div>
      <div>
      <input type="password" name="password"></input>
      </div>

      <input type="submit" class="btn btn-success pull-left"/>
    </form>
  </div>
</div>

</article>
{% endblock %}
